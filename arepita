!-- iframe inicia con DuckDuckGo --
iframe id=ventana src=httpsduckduckgo.comiframe

script
function ir() {
    let url = document.getElementById('url').value.trim();
    if (!url) return;  si no escribes nada, no hace nada
    if (!url.startsWith('http')) {
        url = 'https' + url;
    }
    document.getElementById('ventana').src = url;
}
script

