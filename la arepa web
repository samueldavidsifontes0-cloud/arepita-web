<h1>Arepita ProMax</h1>
<p>Escribe la dirección de la página que quieras visitar o una búsqueda:</p>

<input type="text" id="url" placeholder="Arepita ProMax">
<button onclick="ir()">Ir</button>

<script>
// Abrir DuckDuckGo automáticamente al cargar
window.onload = function() {
    window.open("https://duckduckgo.com", "_blank");
};

function ir() {
    let input = document.getElementById('url').value.trim();
    if (!input) return;

    // Si empieza con http o https, abrir como URL
    if (input.startsWith('http')) {
        window.open(input, "_blank");
    } else {
        // Si no, hacer búsqueda en DuckDuckGo
        let searchUrl = "https://duckduckgo.com/?q=" + encodeURIComponent(input);
        window.open(searchUrl, "_blank");
    }
}
</script>

